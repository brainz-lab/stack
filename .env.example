# Brainz Lab Stack Configuration
# Copy this file to .env and customize

# ============================================
# Database
# ============================================
POSTGRES_USER=brainzlab
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=brainzlab
POSTGRES_PORT=5432

# ============================================
# Redis
# ============================================
REDIS_PORT=6379

# ============================================
# MinIO (S3-compatible storage)
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_in_production
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ============================================
# Service Ports
# ============================================
RECALL_PORT=3001
REFLEX_PORT=3002
PULSE_PORT=3003
FLUX_PORT=3004
SIGNAL_PORT=3005
VAULT_PORT=3006
BEACON_PORT=3007
VISION_PORT=3008
SENTINEL_PORT=3009

# ============================================
# Service Hostnames (for Traefik routing)
# ============================================
# Local development:
RECALL_HOST=recall.localhost
REFLEX_HOST=reflex.localhost
PULSE_HOST=pulse.localhost
FLUX_HOST=flux.localhost
SIGNAL_HOST=signal.localhost
VAULT_HOST=vault.localhost
BEACON_HOST=beacon.localhost
VISION_HOST=vision.localhost
SENTINEL_HOST=sentinel.localhost

# Production example:
# RECALL_HOST=recall.yourdomain.com
# REFLEX_HOST=reflex.yourdomain.com
# PULSE_HOST=pulse.yourdomain.com
# FLUX_HOST=flux.yourdomain.com
# SIGNAL_HOST=signal.yourdomain.com
# VAULT_HOST=vault.yourdomain.com
# BEACON_HOST=beacon.yourdomain.com
# VISION_HOST=vision.yourdomain.com
# SENTINEL_HOST=sentinel.yourdomain.com

# ============================================
# Service URLs (for internal communication)
# ============================================
# Local development (no Traefik):
# RECALL_URL=http://localhost:3001
# REFLEX_URL=http://localhost:3002
# PULSE_URL=http://localhost:3003

# With Traefik (recommended):
RECALL_URL=http://recall.localhost
REFLEX_URL=http://reflex.localhost
PULSE_URL=http://pulse.localhost
FLUX_URL=http://flux.localhost
SIGNAL_URL=http://signal.localhost
VAULT_URL=http://vault.localhost
BEACON_URL=http://beacon.localhost
VISION_URL=http://vision.localhost
SENTINEL_URL=http://sentinel.localhost

# ============================================
# SDK Configuration (for your Rails app)
# ============================================
# Export this to your shell or set in your app's env
BRAINZLAB_SECRET_KEY=

# ============================================
# Rails Master Keys (leave empty for pre-built images)
# ============================================
RECALL_MASTER_KEY=
REFLEX_MASTER_KEY=
PULSE_MASTER_KEY=
FLUX_MASTER_KEY=
SIGNAL_MASTER_KEY=
VAULT_MASTER_KEY=
BEACON_MASTER_KEY=
VISION_MASTER_KEY=
SENTINEL_MASTER_KEY=

# ============================================
# Secret Keys (REQUIRED - generate with: openssl rand -hex 64)
# ============================================
RECALL_SECRET_KEY=
REFLEX_SECRET_KEY=
PULSE_SECRET_KEY=
FLUX_SECRET_KEY=
SIGNAL_SECRET_KEY=
VAULT_SECRET_KEY=
BEACON_SECRET_KEY=
VISION_SECRET_KEY=
SENTINEL_SECRET_KEY=

# ============================================
# Ingest Keys (for SDK authentication)
# ============================================
RECALL_INGEST_KEY=
REFLEX_INGEST_KEY=
PULSE_INGEST_KEY=
FLUX_INGEST_KEY=
SIGNAL_INGEST_KEY=
VAULT_INGEST_KEY=
BEACON_INGEST_KEY=
VISION_INGEST_KEY=
SENTINEL_INGEST_KEY=

# ============================================
# Vault API Key (for inter-service communication)
# ============================================
# Services use this key to authenticate with Vault for secrets management.
# Generate with: openssl rand -hex 32
# Leave empty for development (services will work without Vault integration)
VAULT_API_KEY=

# ============================================
# Vault Standalone Mode
# ============================================
# Enable standalone mode to skip Platform SSO authentication.
# This allows Vault to work independently without the Platform service.
# Set to "true" for self-hosted deployments.
VAULT_STANDALONE_MODE=true

# ============================================
# Docker Images (defaults to Docker Hub)
# ============================================
# RECALL_IMAGE=brainzllc/recall:latest
# REFLEX_IMAGE=brainzllc/reflex:latest
# PULSE_IMAGE=brainzllc/pulse:latest
# FLUX_IMAGE=brainzllc/flux:latest
# SIGNAL_IMAGE=brainzllc/signal:latest
# VAULT_IMAGE=brainzllc/vault:latest
# BEACON_IMAGE=brainzllc/beacon:latest
# VISION_IMAGE=brainzllc/vision:latest
# SENTINEL_IMAGE=brainzllc/sentinel:latest

